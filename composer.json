{
    "name": "sourcecroc/php-code-style",
    "description": "Code style used at SourceCroc",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Maurice Heijligers",
            "email": "maurice@sourcecroc.io"
        }
    ],
    "require": {
        "php": ">=8.1",
        "squizlabs/php_codesniffer": "*",
        "slevomat/coding-standard": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "SourceCroc\\CodeStyle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
